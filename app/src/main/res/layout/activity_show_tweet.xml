<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/tweet_show_image"
        android:transitionName="tweet_user_image"/>

    <TextView
        android:id="@+id/tweet_show_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tweet_show_image"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tweet_show_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tweet_show_image"
        android:layout_below="@id/tweet_show_user_name"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

    <TextView
        android:id="@+id/tweet_show_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_image"
        android:textSize="16sp"/>

    <com.moko256.twitterviewer256.TweetImageTableView
        android:id="@+id/tweet_show_images"
        android:layout_below="@id/tweet_show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tweet_show_via"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_images"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

    <TextView
        android:id="@+id/tweet_show_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_via"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tweet_show_tweet_reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/reply"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/tweet_show_tweet_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tweet_show_tweet_reply_button"
        android:minLines="2"
        android:maxLines="3"/>

</RelativeLayout>