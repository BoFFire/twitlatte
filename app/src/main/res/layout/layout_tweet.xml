<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet_retweet_user_name"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tweet_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_retweet_user_name"
        android:layout_marginLeft="@dimen/layout_tweet_card_side_margin"
        android:layout_marginRight="@dimen/layout_tweet_card_side_margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/layout_tweet_card_corner"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="16dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/TLimage"/>

            <TextView
                android:id="@+id/tweet_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/TLimage"
                android:ellipsize="end"
                android:textSize="16sp"
                android:lines="1"
                android:layout_marginTop="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tweet_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_toRightOf="@id/tweet_user_name"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/tweet_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/TLimage"
                android:layout_below="@id/tweet_user_name"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tweet_time_stamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tweet_user_id"
                android:textColor="#808080"
                android:lines="1"
                android:textSize="16sp"
                android:gravity="right"/>

            <com.moko256.twitterviewer256.TweetImageTableView
                android:id="@+id/tweet_image_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/tweet_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:id="@+id/tweet_content_retweet_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@id/tweet_image_container"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_like"/>

            <ImageButton
                android:id="@+id/tweet_content_like_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@id/tweet_image_container"
                android:layout_toLeftOf="@+id/tweet_content_retweet_button"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_like"/>

            <ImageButton
                android:id="@+id/tweet_content_reply_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@id/tweet_image_container"
                android:layout_toLeftOf="@+id/tweet_content_like_button"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_like"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>