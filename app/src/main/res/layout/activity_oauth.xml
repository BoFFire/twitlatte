<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/start_twitter_callback_auth_button"
        android:text="@string/twitter_callback_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartTwitterCallbackAuthClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/start_twitter_code_auth_button"
        android:text="@string/twitter_code_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_twitter_callback_auth_button"
        android:onClick="onStartTwitterCodeAuthClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/start_mastodon_callback_auth_button"
        android:text="@string/mastodon_callback_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_twitter_code_auth_button"
        android:onClick="onStartMastodonCallbackAuthClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/start_mastodon_code_auth_button"
        android:text="@string/mastodon_code_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_mastodon_callback_auth_button"
        android:onClick="onStartMastodonCodeAuthClick"
        style="@style/Widget.AppCompat.Button.Colored"/>


    <Button
        android:id="@+id/settings"
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onSettingClick"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</RelativeLayout>